{
  "name": "Scrollagotchi",
  "description": "Tamagotchi for your scrolling habits",
  "permissions": ["storage", "tabs", "scripting", "alarms","idle","runtime"],
  "host_permissions": ["https://*.instagram.com/*"],
  "background": {
      "service_worker": "background.js"
    },
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "Scrollagotchi_Isolated.png",
    "default_icon": "Scrollagotchi_Logo.png"
  }
}